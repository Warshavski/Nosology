@using Escyug.Nosology.Web.App.ViewModels
@model IEnumerable<DownloadableFile>

@{
    ViewBag.Title = "Загрузки";
    Layout = "~/Views/Shared/_Main.cshtml";
}


<div class="mdl-grid nos-content">
    
    @if (Model != null)
    {
        foreach (var file in Model)
        {
            <div download class="nos-graphs mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--6-col">
                <a href="#" data-link='@file.Link' onclick="getFile(this.dataset.link, 'files')">

                    <i class="material-icons content-icon">@file.IconStyle</i>

                    <span style="position: absolute; margin-top: 5px;">@file.Title</span>

                </a>
            </div>
        }
    }
    else
    {
        <h3>NO DATA</h3>
    }

</div>

